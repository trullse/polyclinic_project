<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="polyclinic.UI.Views.AppointmentsView"
             Title="AppointmentsView">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="Loaded"
                                        Command="{Binding UpdateClientsListCommand}"/>
    </ContentPage.Behaviors>
    <VerticalStackLayout>
        <Label 
            Text="Appointments will be here"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Picker
            ItemsSource="{Binding Clients}"
            SelectedItem="{Binding SelectedClient}"
            ItemDisplayBinding="{Binding Name}">
            <Picker.Behaviors>
                <toolkit:EventToCommandBehavior EventName="SelectedIndexChanged"
                                                Command="{Binding UpdateAppointmentsListCommand}"/>
            </Picker.Behaviors>
        </Picker>
        <CollectionView
            ItemsSource="{Binding Appointments}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label 
                        Text="{Binding Diagnosis}"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>       
    </VerticalStackLayout>
</ContentPage>