<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="polyclinic.UI.Views.WelcomeView"
             Title="">
    <Grid
        Margin="20"
        ColumnDefinitions="*,Auto"
        RowDefinitions="200,*">
        <Image
            Source="doctor.png"
            HeightRequest="700"
            HorizontalOptions="End"
            VerticalOptions="Start"
            Grid.Row="0"
            Grid.Column="1"/>
        <Image
            Source="arrow.png"
            HeightRequest="200"
            HorizontalOptions="Center"
            VerticalOptions="End"
            Grid.Row="1"
            Grid.Column="0"/>
        <VerticalStackLayout
            Grid.Column="0"
            Grid.Row="0"
            Spacing="30"
            HorizontalOptions="Center">
            <Label
                Text="Welcome to your new system!"
                FontSize="Header"
                FontAttributes="Bold"/>
            <Label
                Text="Select the category you need"
                FontSize="Medium"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>