<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="polyclinic.UI.Views.AppointmentDetailsView"
             Title="AppointmentDetailsView">
    <VerticalStackLayout
        Margin="5">
        <Label
            Text="{Binding Appointment.ClientId, StringFormat='Client ID: {0}'}"/>
        <Label
            Text="{Binding Appointment.DoctorId, StringFormat='Doctor ID: {0}'}"/>
        <Label
            Text="{Binding Appointment.AppointmentDate, StringFormat='Appointment date: {0}'}"/>
        <Label
            Text="{Binding Appointment.TreatmentCost, StringFormat='Treatment cost: {0}'}"/>
        <Label
            Text="{Binding Appointment.Diagnosis, StringFormat='Diagnosis: {0}'}"/>
    </VerticalStackLayout>
</ContentPage>