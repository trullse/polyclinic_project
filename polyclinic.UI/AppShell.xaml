<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="polyclinic.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:polyclinic.UI"
    xmlns:views="clr-namespace:polyclinic.UI.Views"
    Shell.FlyoutBehavior="Locked">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Appointments"
        ContentTemplate="{DataTemplate views:AppointmentsView}"
        Route="AppointmentsView" />
    <ShellContent
        Title="Clients"
        ContentTemplate="{DataTemplate views:ClientsView}"
        Route="ClientsView"/>
    <ShellContent
        Title="Doctors"
        ContentTemplate="{DataTemplate views:DoctorsView}"
        Route="DoctorsView"/>
    <ShellContent
        Title="Statistics"
        ContentTemplate="{DataTemplate views:StatisticsView}"
        Route="StatisticsView"/>

</Shell>
